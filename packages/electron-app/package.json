{
  "name": "@diagram-craft/electron-app",
  "version": "1.0.0",
  "description": "Electron application wrapper for Diagram Craft",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "npm-run-all --parallel dev:*",
    "dev:tsc": "tsc --watch",
    "dev:electron": "wait-on dist/electron-app/src/main.js && electron dist/electron-app/src/main.js --dev",
    "start": "electron dist/electron-app/src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@diagram-craft/main": "workspace:^"
  },
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.diagramcraft.app",
    "productName": "Diagram Craft",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "../main/dist",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}